<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.movieport.mapper.AdminMapper">

	<!-- 회원리스트 불러오기 -->
	<select id="memberList"
		resultType="com.movieport.model.MemberVO">
		select * from member
	</select>

	<!-- 회원상세정보 불러오기 -->
	<select id="memberDetail"
		resultType="com.movieport.model.MemberVO">
		select * from member where id = #{id}
	</select>

	<!-- 회원정보 수정하기 -->
	<update id="memberInfoUpdate">
		update member set
		nickname=#{nickname},
		admin=#{admin}, block=#{block}
		where id=#{id}
	</update>

	<!-- 영화리스트 불러오기 -->
	<select id="movieList" resultType="com.movieport.model.MovieVO">
		select * from movie
	</select>

	<!-- 영화상세정보 불러오기 -->
	<select id="movieDetail"
		resultType="com.movieport.model.MovieVO">
		select * from movie where m_code = #{m_code}
	</select>

	<!-- 영화 추가 하기 -->
	<insert id="movieEnroll">
		,insert into movie(title, runtime, thumb, content,
		showdate, type, genres, language, original_title, video)
		values(#{title}, #{runtime}, #{thumb}, #{content}, #{showdate},
		#{type}, #{genres}, #{language}, #{original_title}, #{video})
	</insert>

	<!-- 영화정보 수정하기 -->
	<update id="movieInfoUpdate">
		update movie set
		thumb =#{thumb},
		title =#{title},
		original_title =#{original_title},
		language =#{language},
		genres
		=#{genres},
		video =#{video},
		showdate =#{showdate},
		type =#{type},
		content =#{content}
		where m_code=#{m_code}
	</update>

	<delete id="movieDelete">
		delete from movie where
		m_code=#{m_code}
	</delete>

	<!-- 리뷰 리스트 불러오기 -->
	<select id="getReviewList"
		resultType="com.movieport.model.ReviewVO">
		select * from review
	</select>

	<!-- 리뷰 상세 -->
	<select id="getReviewListDetail"
		resultType="com.movieport.model.ReviewVO">
		select * from review where reviewid = #{reviewid}
	</select>

	<!-- 리뷰 삭제 -->
	<delete id="deleteReview">
		delete from review where reviewid=#{reviewid}
	</delete>
</mapper>